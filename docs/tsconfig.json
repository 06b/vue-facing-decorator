{
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": ".",
        "rootDir": ".",
        "moduleResolution": "node",
        "module": "CommonJS",
        "target": "ES6",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "esnext",
            "DOM"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "experimentalDecorators": true,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": false,
        "paths": {
            "vue-facing-decorator": ["../dist"]
        },
        "jsx": "preserve"
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx",
    ],
}